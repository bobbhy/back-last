## Server Properties
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB
# ==============================================================
server.port= 5000
# ==============================================================
# ==============================================================
spring.datasource.url=jdbc:mysql://127.0.0.1:3306/dbname?useUnicode=true&useJDBCCompliantTimezoneShift=true&useLegacyDatetimeCode=false&serverTimezone=UTC
spring.datasource.username =user
spring.datasource.password =pass
# ====================================================
# = FrontEndPoint
app.front=http://localhost:3000/
# ====================================================
System.Net.ServicePointManager.Expect100Continue = false;
# ==============================================================
# = Keep the connection alive if idle for a long time (needed in production)
# ==============================================================
spring.datasource.testWhileIdle = true
spring.datasource.validationQuery = SELECT 1

# ==============================================================
# = Show or not log for each sql query
# ==============================================================
spring.jpa.show-sql = true

# ==============================================================
# = Hibernate ddl auto (create, create-drop, update)
# ==============================================================
spring.jpa.hibernate.ddl-auto = update

# ==============================================================
# = The SQL dialect makes Hibernate generate better SQL for the chosen database
# ==============================================================
spring.jpa.properties.hibernate.dialect = org.hibernate.dialect.MySQL8Dialect

# ==============================================================
# = Initialize the database using data.sql script
# ==============================================================
spring.datasource.initialization-mode=always
## Jackson Properties
# ==============================================================
spring.jackson.serialization.WRITE_DATES_AS_TIMESTAMPS= false
spring.jackson.time-zone= UTC
# ==============================================================
## App Properties
# ==============================================================
app.jwtSecret=generate_me
app.jwtExpirationInMs = 604800000
# ==============================================================
spring.main.allow-bean-definition-overriding=true
# ==============================================================
#######mail properties###########
spring.mail.host=xxx.gmail.com
spring.mail.port=xxx
spring.mail.username=email@email.com
spring.mail.password=pass
spring.mail.protocol=smtp
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true